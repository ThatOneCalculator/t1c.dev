a
    text-decoration none
    color #9ccfd8

.textBlock
    display flex
    justify-content center
    align-items center
    flex-direction column
    margin-top 4rem
    font-size 1.6rem
    font-weight 700
    color #f8f6f2
    font-family "Atkinson Hyperlegible", sans-serif
    text-align center
    line-height 1.5
    text-wrap wrap
    width 50%

    @media (max-width 768px)
        width 80%
        margin-top 2rem

    .textGradient
        background linear-gradient(90deg, #50808e 0%, #a3c9a8 100%)
        font-weight 700
        -webkit-background-clip text
        -webkit-text-fill-color transparent

.links
    display flex
    justify-content center
    align-items center
    flex-direction row
    gap 1rem
    flex-wrap wrap

    .link
        display grid
        padding 1.5rem
        font-size 2.5rem
        color #56949f
        border-radius 999px
        background-color #f2e9e1
        outline 6px dotted #f2e9e1
        outline-offset -8px
        margin-top 0.5rem
        transition all 0.3s ease-in-out

    &:hover .link
        padding 1.8rem
        opacity 0.5

    .link:hover
        margin-top 0rem
        opacity 1
        background-color #575279
        padding 2rem
        color #ebbcba
        outline 6px dotted #ebbcba
        transform scale(1.1)


.header
    color #f8f6f2
    display flex
    flex-direction column
    margin-top 2rem
    font-size 1.2rem
    font-weight 700

    h1
        margin-bottom 0


.cover
    position fixed
    height 100%
    transform translateY(-500px)
    filter blur(10px)
    position center
    size cover
    animation scroll 10s infinite ease-in-out alternate
    z-index -10
    img
        user-select none
        -webkit-user-select none
