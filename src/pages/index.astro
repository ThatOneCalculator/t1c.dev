                        width="30"
                        height="19.5"
                        viewBox="0 0 220 130"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        id="g11"
                        style="stroke-linecap:round;stroke-linejoin:round;stroke:#F8F6F2;stroke-linecap:round;transform:translateY(0.1em)"
